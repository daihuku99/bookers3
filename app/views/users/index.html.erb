<h1>Users</h1>

<table>
		<thead>
		  <tr>
			  <th>image</th>
			  <th>name</th>
			  <th colspan="3"></th>
		  </tr>
		</thead>
		<tbody>
			<% @users.each do |user|  %>
				<tr>
				  	<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to 'show', user %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="profiel-container">
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
		<h3><%= @users.name %></h3>
		<% if @user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(@user) %>
		<% end %>
	</div>

	<h1>New book</h1>

		<%= form_for(@book_new, url: books_path) do |f| %>
		  <%= render 'layouts/error_messages', model: f.object %>
				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_field :body %>

				<%= f.submit 'Create Book' %>

		<% end %>