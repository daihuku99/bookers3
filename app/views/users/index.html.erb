<div class="container">
	<div class="row">
	  <div class="col-xs-3">
		<%= render 'users/template', user: @user, book_new: @book_new %>
	  </div>
	  <div class="col-xs-9">
		<h1>Users</h1>

		<table class="table table-striped">
				<thead>
				  <tr>
					  <th>image</th>
					  <th>name</th>
					  <th colspan="3"></th>
				  </tr>
				</thead>
				<tbody>
					<% @users.each do |user|  %>
						<tr>
						  	<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', user %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
	  </div>
	</div>
</div>