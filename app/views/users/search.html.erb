<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/template', user: @user, book_new: @book_new %>
		</div>
		<div class="col-xs-9">
			<% if @user_or_book == "1" %>
				<h1>Search Result</h1>
				<table class="table table-striped">
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= link_to user.name, user_path(user) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			<% elsif @user_or_book =="2" %>
				<h1>Search Result</h1>
				<table class="table table-striped">
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= link_to book.title, book_path(book) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			<% else %>
			<% end %>
		</div>
	</div>
</div>