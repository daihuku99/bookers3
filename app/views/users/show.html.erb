<h1>Books</h1>
	<table>
		<thead>
		  <tr>
		  	  <th></th>
			  <th>Title</th>
			  <th>Opinion</th>
			  <th colspan="3"></th>
		  </tr>
		</thead>
		<tbody>
			<% @books.each do |book|  %>
				<tr>
				  	<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="profiel-container">
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
		<h3><%= @user.name %></h3>
		<p><%= @user.introduction %></p>
		<% if @user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(@user) %>
		<% end %>
	</div>

	<h1>New book</h1>

		<%= form_for(@book_new, url: books_path) do |f| %>
		  <%= render 'layouts/error_messages', model: f.object %>
				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_field :body %>

				<%= f.submit 'Create Book' %>

		<% end %>