<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
<% end %>

<div class="container">
	<div class="row">
	  <div class="col-xs-3">
		<%= render 'users/template', user: @user, book_new: @book_new %>
	  </div>
	  <div class="col-xs-9">
		<h1>Books</h1>
			<table class="table table-striped">
				<thead>
				  <tr>
				  	  <th></th>
					  <th>Title</th>
					  <th>Opinion</th>
					  <th colspan="3"></th>
				  </tr>
				</thead>
				<tbody>
					<% @books.each do |book|  %>
						<tr>
						  	<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
					<%= paginate @books, class:"paginate" %>
				</tbody>
			</table>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th><h5>フォロー一覧</h5></th>
						<th colspan="4"></th>
					</tr>
				</thead>
				<tbody>
					<% @user.following_user.where.not(id: current_user.id).each do |user| %>
						<tr>
							<%#<%= "id: #{user.id} email: #{user.email}" %>
							<td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: 'no_image.jpg' %></td>
							<td><%= user.name %></td>
							<% if current_user.following?(user) %>
									<td><%= link_to 'フォロー外す', unfollow_path(user.id), method: :post %></td>
								<% else %>
									<td><%= link_to 'フォローする', follow_path(user.id), method: :post %></td>
							<% end %>
							<td><%= link_to 'show', user_path(user) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th><h5>フォロワー一覧</h5></th>
						<th colspan="4"></th>
					</tr>
				</thead>
				<tbody>
					<% @user.following_user.where.not(id: current_user.id).each do |user| %>
						<tr>
							<%#<%= "id: #{user.id} email: #{user.email}" %>
							<td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: 'no_image.jpg' %></td>
							<tr><%= user.name %></tr>
							<% if current_user.following?(user) %>
								<tr><%= link_to 'フォロー外す', unfollow_path(user.id), method: :post %></tr>
							<% else %>
								<tr><%= link_to 'フォローする', follow_path(user.id), method: :post %></tr>
							<% end %>
							<tr><%= link_to 'show', user_path(user) %></tr>
						</tr>
					<% end %>
				</tbody>
			</table>
	  </div>
	</div>
</div>