<div class="profiel-container">
		<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
		<h3><%= user.name %></h3>
		<p><%= user.introduction %></p>
		<% if user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(user), class:"btn btn-default" %>
		<% end %>
	</div>

	<h1>New book</h1>

		<%= form_for(book_new, url: books_path) do |f| %>
		  <%= render 'layouts/error_messages', model: f.object %>
				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_field :body %>

				<%= f.submit 'Create Book', class:"btn btn-default btn-new" %>

		<% end %>