<div class="profiel-container">
		<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
		<h3><%= user.name %></h3>
		<p><%= user.introduction %></p>
		<%#<%= "id: #{@user.id}" %>
		<%= "フォロー数: #{@user.follower.count}" %><br>
		<%= "フォロワー数: #{@user.followed.count}" %><br>
		<% unless @user == current_user %>
			<div class="relationships_buttons_<%= user.id %>">
				<%= render partial: 'relationships/relationship', locals: { user: user} %>
			</div>
		<% end %>
		<% if user.id == current_user.id %>
			<%= link_to edit_user_path(user), class:"btn btn-default btn-new" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
		<% end %>
</div>

	<h1>New book</h1>

		<%= form_for(book_new, url: books_path) do |f| %>
		  <%= render 'layouts/error_messages', model: f.object %>
				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_field :body %>

				<%= f.submit 'Create Book', class:"btn btn-default btn-new" %>

		<% end %>