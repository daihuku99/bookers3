<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
<% end %>

<h1>Book detail</h1>

<table>
	<tr>
		<th colspan="5"></th>
	</tr>
	<tbody>
	   <tr>
	   	 <td></td>
		 <td><%= @book.title %></td>
		 <td><%= @book.body %></td>
		 <% if @book.user == current_user %>
		 <td><%= link_to"destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
		 <td><%= link_to"edit", edit_book_path(@book.id) %></td>
		 <% end %>
	   </tr>
	</tbody>
</table>