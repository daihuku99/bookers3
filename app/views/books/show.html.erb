<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
<% end %>

<h1>Book detail</h1>

<table>
	<tr>
		<th colspan="5"></th>
	</tr>
	<tbody>
	   <tr>
	   	 <td><%= link_to @user.name, @book.user %></td>
		 <td><%= @book.title %></td>
		 <td><%= @book.body %></td>
		 <% if @book.user == current_user %>
		 <td><%= link_to"destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
		 <td><%= link_to"edit", edit_book_path(@book.id) %></td>
		 <% end %>
	   </tr>
	</tbody>
</table>

<div class="profiel-container">
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
		<h3><%= @user.name %></h3>
		<p><%= @user.introduction %></p>
		<% if @user.id == current_user.id %>
			<%= link_to 'edit', edit_user_path(@user) %>
		<% end %>
	</div>

	<h1>New book</h1>

		<%= form_for(@book_new, url: books_path) do |f| %>
		  <%= render 'layouts/error_messages', model: @book_data %>
				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_field :body %>

				<%= f.submit 'Create Book' %>

		<% end %>