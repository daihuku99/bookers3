<h1>Books</h1>
	<table>
		<thead>
		  <tr>
			  <th>Title</th>
			  <th>Opinion</th>
			  <th colspan="3"></th>
		  </tr>
		</thead>
		<tbody>
			<% @books.each do |book|  %>
				<tr>
				  	<td></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h1>New book</h1>

<%= form_for(@book, url: books_path) do |f| %>
  <%= render 'layouts/error_messages', book: @book %>
		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Opinion</h4>
		<%= f.text_field :body %>

		<%= f.submit 'Create Book' %>

<% end %>