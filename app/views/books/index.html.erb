<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1 class="jquery">Hello jQuery!</h1>

<div class="container">
	<div class="row">
	  <div class="col-xs-3">
		<%= render 'users/template', user: @user, book_new: @book_new %>
	  </div>
	  <div class="col-xs-9">
		<h1>Books</h1>
			<table class="table table-striped">
				<thead>
				  <tr>
				  	  <th></th>
					  <th>Title</th>
					  <th>Opinion</th>
					  <th>Comments</th>
					  <th>いいね</th>
					  <th colspan="5"></th>
				  </tr>
				</thead>
				<tbody>
					<% @books.each do |book|  %>
						<tr>
						  	<td><%= link_to user_path(book.user_id) do %>
						  		<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %>
						  		<% end %>
						  		</td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
							<td><%= book.comments.count %>comments</td>
							<div>
								<td id="favorites_buttons_<%= book.id %>">
									<%= render partial: 'favorites/favorite', locals: { book: book } %></td>
							</div>
						</tr>
					<% end %>
					<%= paginate @books, class:"paginate" %>
				</tbody>
			</table>
	  </div>
	</div>
</div>